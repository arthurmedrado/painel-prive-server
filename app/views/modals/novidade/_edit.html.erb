<div id="editNovidade" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="editNovidadeLabel" data-keyboard="false">
  <%= form_tag novidades_path, method: :put, remote: true, class: 'center-block float-label' do -%>
    <%= hidden_field_tag :novidade_id, nil, class: 'novidade-id' %>
    <fieldset>
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" tabindex="-1">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="editNovidadeLabel"> Editar Novidade </h4>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-xs-12">
                <div class="form-group has-float-label">
                  <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Titulo', autofocus: true %>
                  <%= label_tag :name, 'Titulo', class: 'control-label' %>
                  <span class="help-block"></span>
                </div>

                <div class="form-group has-float-label">
                  <%= text_area_tag :descricao, nil, class: 'form-control has-success', placeholder: 'Descrição' %>
                  <%= label_tag :descricao, 'Descrição', class: 'control-label' %>
                  <span class="help-block"></span>
                </div>
                
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Descartar</button>
            <%= button_tag class: 'btn btn-primary ladda-button submit', data: { style: 'zoom-in' } do %>
              <span class="ladda-label">Salvar Alterações</span>
            <% end %>
          </div>
        </div>
      </div>
    </fieldset>
  <% end -%>
</div>
