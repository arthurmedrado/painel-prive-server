<div id="openGallery-<%= gallery.id %>" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="openGallery-<%= gallery.id %>Label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" tabindex="-1">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="openGallery-<%= gallery.id %>Label"> <%= gallery.title if gallery.title.present? %> </h4>
      </div>
      <div class="modal-body">
        <div class="gallery row" id="gallery:<%= gallery.id %>">
          <% gallery.images.each do |image| %>
            <%= render image %>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addGalleryImage" data-gallery-id="<%= gallery.id %>">
          Adicionar imagem
          <span class="glyphicon glyphicon-cloud-upload"></span>
        </button>
      </div>
    </div>
  </div>
</div>
