<div id="createPush" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="createPushLabel" data-keyboard="false">
  <%= form_tag pushes_path, method: :post, remote: true, class: 'center-block float-label' do -%>
  <fieldset>
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" tabindex="-1">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="createPushLabel"> Cadastrar notificação </h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group has-float-label">
                <%= text_field_tag :title, nil, class: 'form-control', placeholder: ' ' %>
                <%= label_tag :title, 'Titulo', class: 'control-label' %>
                <span class="help-block"></span>
              </div>

              <div class="form-group has-float-label">
                <%= text_area_tag :message, nil, class: 'form-control has-success', placeholder: ' ' %>
                <%= label_tag :message, 'Mensagem', class: 'control-label' %>
                <span class="help-block"></span>
              </div>

            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"> Descartar </button>
          <%= button_tag class: 'btn btn-primary ladda-button submit', data: { style: 'zoom-in' } do %>
            <span class="ladda-label"> Criar notificação </span>
          <% end %>
        </div>
      </div>
    </div>
  </fieldset>
  <% end -%>
</div>
