<div id="createContato" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="createContatoLabel" data-keyboard="false">
  <%= form_tag contatos_path, method: :post, remote: true, class: 'center-block float-label' do -%>
  <fieldset>
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" tabindex="-1">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="createContatoLabel"> Cadastrar Contato </h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group has-float-label">
                <%= text_field_tag :nome, nil, class: 'form-control', placeholder: 'Nome', autofocus: true %>
                <%= label_tag :nome, 'Nome', class: 'control-label' %>
                <span class="help-block"></span>
              </div>

              <div class="form-group has-float-label">
                <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'E-mail', autofocus: true %>
                <%= label_tag :email, 'E-mail', class: 'control-label' %>
                <span class="help-block"></span>
              </div>

              <div class="form-group has-float-label">
                <%= text_field_tag :telefone, nil, class: 'form-control', placeholder: 'Telefone', autofocus: true %>
                <%= label_tag :telefone, 'Telefone', class: 'control-label' %>
                <span class="help-block"></span>
              </div>

              <div class="form-group has-float-label">
                <%= text_field_tag :descricao, nil, class: 'form-control has-success', placeholder: 'Descrição' %>
                <%= label_tag :descricao, 'Descrição', class: 'control-label' %>
                <span class="help-block"></span>
              </div>

            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Descartar</button>
          <%= button_tag class: 'btn btn-primary ladda-button submit', data: { style: 'zoom-in' } do %>
            <span class="ladda-label">Salvar Alteração</span>
          <% end %>
        </div>
      </div>
    </div>
  </fieldset>
  <% end -%>
</div>
