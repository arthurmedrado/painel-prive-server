# set path to application
working_directory '<%= fetch(:current_path) %>'

# Set unicorn options
worker_processes 2
preload_app true
timeout 30

# Set up socket location
listen "<%= fetch(:shared_path) %>/tmp/sockets/unicorn.sock", backlog: 64

# Logging
stderr_path "<%= fetch(:shared_path) %>/log/unicorn.stderr.log"
stdout_path "<%= fetch(:shared_path) %>/log/unicorn.stdout.log"

# Set master PID location
pid "<%= fetch(:shared_path) %>/tmp/pids/unicorn.pid"
